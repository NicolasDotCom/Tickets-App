# ============================================
# CONFIGURACIÓN PARA LARAVEL CLOUD (PRODUCCIÓN)
# ============================================
# Copia estas variables a tu panel de Laravel Cloud en:
# Settings → Environment Variables

# ============================================
# APLICACIÓN
# ============================================
APP_NAME="Tickets-App"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tickets-app-main-dbvpcm.laravel.cloud

# ============================================
# LOCALE (ESPAÑOL)
# ============================================
APP_LOCALE=es
APP_FALLBACK_LOCALE=es

# ============================================
# SESIÓN - CRÍTICO PARA AUTENTICACIÓN
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ⚠️ IMPORTANTE: Estas variables son CRÍTICAS para que funcione la autenticación en HTTPS
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ============================================
# CACHE Y COLA
# ============================================
CACHE_STORE=database
QUEUE_CONNECTION=sync

# ============================================
# CORREO ELECTRÓNICO
# ============================================
# Opción 1: Gmail SMTP (Actual - puede ir a spam)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=correo@gmail.com
MAIL_PASSWORD=contraseña_ejemplo
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=soporte.tesltda@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# Opción 2: Resend (Recomendado para producción)
# MAIL_MAILER=resend
# RESEND_KEY=tu_api_key_aqui

# Opción 3: Mailgun
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=tu_dominio.com
# MAILGUN_SECRET=tu_secret_key

# ============================================
# BASE DE DATOS
# ============================================
# Laravel Cloud configura esto automáticamente
# No necesitas agregar DB_* manualmente

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_LEVEL=error

# ============================================
# INSTRUCCIONES
# ============================================
# 1. Ve a tu panel de Laravel Cloud
# 2. Settings → Environment Variables
# 3. Agrega TODAS estas variables (especialmente SESSION_*)
# 4. Guarda los cambios
# 5. Laravel Cloud reiniciará automáticamente la aplicación
# 6. Prueba el login nuevamente
#
# NOTA: Las variables SESSION_SECURE_COOKIE, SESSION_HTTP_ONLY y SESSION_SAME_SITE
#       son ESENCIALES para que funcione la autenticación en HTTPS
